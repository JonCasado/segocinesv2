<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    
    <!-- Img Previa -->
    <ImageView
        android:id="@+id/imgPreviaPeli"
        android:contentDescription="@string/imgPeli"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
    </ImageView>
 
    <!-- Nombre -->
    <TextView
        android:id="@+id/nombrePeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgPreviaPeli"
        android:layout_toRightOf="@+id/imgPreviaPeli"
        android:layout_toEndOf="@+id/imgPreviaPeli"
        android:textStyle="bold" >
    </TextView>
 
    <!-- Nombre Origninal -->
    <TextView
        android:id="@+id/nombreOrigPeli"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombrePeli"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/imgPreviaPeli"
        android:layout_toEndOf="@+id/imgPreviaPeli" >
    </TextView>
 
    <!-- Horario Artesiete -->
    <TextView
        android:id="@+id/horarioAPeli"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreOrigPeli"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/imgPreviaPeli"
        android:layout_toEndOf="@+id/imgPreviaPeli" >
    </TextView>
    
    <!-- Director -->
    <TextView
        android:id="@+id/directorPeli"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horarioAPeli"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/imgPreviaPeli"
        android:layout_toEndOf="@+id/imgPreviaPeli" >
    </TextView>
</RelativeLayout>